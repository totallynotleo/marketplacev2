<h3>Search Results</h3>  

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th>Cost</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <% @results.each do |listing| %>

 <tr>
      <% if listing.image.attached? == true %>
        <td><%= image_tag listing.image, :size => "100x100"  %> </td>
      <% else %>
        <td></td>
      <% end %>
        <td><%= listing.title %></td>
        <td><%= listing.user.username %></td>
        <td><%= listing.cost %></td>
        <td><%= listing.description %></td>
        <td><%= link_to 'Show', listing %></td>
          <% if listing.user == current_user %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tr> 


          
    <% end %>
    </tbody>
    </table>