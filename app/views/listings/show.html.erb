<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>
<p>
  <% if @listing.image.attached? == true %>
    <%= image_tag @listing.image %>
  <% end %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user.username %>
</p>

<p>
  <strong>Cost:</strong>
  $<%= @listing.cost %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>
<p>
    <% if @listing.user != current_user %>
      <%= button_to 'Add to Cart', add_item_path(@listing), method: 'post', class: "buttonto" %> |
  <% end %>
  <% if @listing.user == current_user %>
    <%= link_to 'Edit', edit_listing_path(@listing) %> |
  <% end %>
  <%= link_to 'Back', listings_path %>
</p>